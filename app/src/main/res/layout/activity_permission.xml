<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_permission"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sjarifhd.androidlearn.PermissionActivity"
    android:orientation="vertical">

    <TextView
        android:text="DANGEROUS PERMISSION LIST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"/>

    <Button
        android:text="ACCESS CAMERA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_camera"/>

    <Button
        android:text="READ WRITE CONTACT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_contact"/>

    <Button
        android:text="READ WRITE STORAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_storage"/>

    <Button
        android:text="ACCESS LOCATIOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_location"/>


</LinearLayout>
